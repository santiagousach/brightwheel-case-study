# Scraper Configuration
# SCRAPER_TYPE is now set in docker-compose.yml for each service
CONFIG_PATH=config/scraper_configs.yaml

# Performance Settings
CONCURRENT_REQUESTS=3
REQUEST_TIMEOUT=30
DELAY_BETWEEN_REQUESTS=1.5

# Output Settings
OUTPUT_DIRECTORY=data/output
# OUTPUT_FILENAME is now set in the config file for each scraper

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/scraper.log

# Selenium Configuration
HEADLESS_BROWSER=true 